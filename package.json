{
  "name": "bsm-platform",
  "version": "1.0.0",
  "description": "Business Service Management Platform with Admin & Customer Portals",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "analyze": "ANALYZE=true npm run build",
    "clean": "rm -rf .next node_modules package-lock.json",
    "reinstall": "npm run clean && npm install",
    "setup": "chmod +x setup.sh && ./setup.sh",
    "quick-start": "chmod +x quick-start.sh && ./quick-start.sh",
    "db:setup": "echo 'Run supabase-setup.sql in Supabase SQL Editor'",
    "db:users": "echo 'Run create-users.sql in Supabase SQL Editor'",
    "db:reset": "echo 'Reset database by running setup scripts again'",
    "env:check": "node -e \"console.log('Checking environment...'); require('dotenv').config({path:'.env.local'}); console.log('Environment loaded successfully');\"",
    "env:template": "cp env.example .env.local && echo 'Environment template copied to .env.local'",
    "docker:build": "docker build -t bsm-platform .",
    "docker:run": "docker run -p 3000:3000 bsm-platform",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "vercel:deploy": "vercel --prod",
    "vercel:preview": "vercel",
    "render:deploy": "echo 'Deploy to Render using render.yaml configuration'",
    "netlify:deploy": "netlify deploy --prod",
    "netlify:preview": "netlify deploy",
    "railway:deploy": "railway up",
    "amplify:deploy": "amplify publish",
    "precommit": "npm run lint && npm run type-check && npm run test:ci",
    "predeploy": "npm run build && npm run test:ci",
    "postinstall": "echo 'Installation complete! Run npm run setup to configure the project.'",
    "health": "curl -f http://localhost:3000/api/health || exit 1",
    "backup": "echo 'Backup your Supabase database from the dashboard'",
    "restore": "echo 'Restore your Supabase database from the dashboard'",
    "logs": "echo 'Check your deployment platform logs'",
    "status": "echo 'Check application status at your deployed URL'"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@react-spring/web": "^10.0.3",
    "@react-three/drei": "^9.88.13",
    "@react-three/fiber": "^8.15.19",
    "@react-three/postprocessing": "^2.15.11",
    "@supabase/auth-helpers-nextjs": "^0.8.7",
    "@supabase/auth-helpers-react": "^0.4.2",
    "@supabase/auth-ui-react": "^0.4.6",
    "@supabase/auth-ui-shared": "^0.1.8",
    "@supabase/supabase-js": "^2.38.0",
    "@use-gesture/react": "^10.3.1",
    "animejs": "^4.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "critters": "^0.0.23",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.18.0",
    "gsap": "^3.13.0",
    "howler": "^2.2.4",
    "jspdf": "^2.5.1",
    "lenis": "^1.3.11",
    "lottie-react": "^2.4.1",
    "lucide-react": "^0.294.0",
    "next": "^14.0.0",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-flow-renderer": "^10.3.17",
    "react-hook-form": "^7.47.0",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.16.0",
    "react-markdown": "^9.0.1",
    "react-query": "^3.39.3",
    "react-spring": "^10.0.3",
    "react-syntax-highlighter": "^15.5.0",
    "react-use-gesture": "^9.1.3",
    "recharts": "^2.8.0",
    "remark-gfm": "^4.0.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.180.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.37",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^18.2.15",
    "@types/react-syntax-highlighter": "^15.5.11",
    "@types/three": "^0.180.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
